<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:id="@+id/state"
            android:text="state:"
            android:layout_height="wrap_content" />

        <com.me.myprogressbutton.CProgressButton
            android:layout_width="65dp"
            android:layout_marginStart="50dp"
            android:gravity="center"
            app:stroke_width="1dp"
            app:radius="40dp"
            app:color="@color/purple_200"
            app:drawable_xml="@drawable/bounder"
            android:textSize="12sp"
            android:textColor="@color/purple_200"
            android:id="@+id/btn"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:id="@+id/state2"
            android:text="state:"
            android:layout_height="wrap_content" />

        <com.me.myprogressbutton.CProgressButton
            android:layout_width="65dp"
            android:layout_marginStart="50dp"
            app:stroke_width="1dp"
            app:radius="40dp"
            app:color="@color/purple_500"
            app:drawable_xml="@drawable/bounder2"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/purple_500"
            android:id="@+id/btn2"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:id="@+id/state3"
            android:text="state:"
            android:layout_height="wrap_content" />

        <com.me.myprogressbutton.CProgressButton
            android:layout_width="65dp"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:textSize="12sp"
            app:stroke_width="1dp"
            app:radius="40dp"
            app:color="@color/black"
            app:drawable_xml="@drawable/bounder3"
            android:textColor="@color/black"
            android:id="@+id/btn3"
            android:layout_height="30dp" />
    </LinearLayout>


</LinearLayout>